@import '_settings'
@import '_fonts'
@import 'work/_splash'
@import 'work/_designs'
@import 'work/_dribbble'
@import 'work/_discovery'
@import 'work/_footer'

normalize()
base()

*, ul, h1, h2, h3, p
  margin: 0
  padding: 0

html, body
  position: relative
  z-index: -9999
  size: 100%

h1, h2
  @extends $gotham-black
  font-size: 44px
  text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

h2
  margin: 0 auto
  font-size: 32px

h3
  @extends $gotham-medium
  font-size: 22px
  color: black

p
  @extends $whitney-book
  text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

header, footer
  a, span
    @extends $gotham-bold
    font-size: 24px
    border-bottom: 2px solid transparent
  
  a:hover
    border-bottom: 2px solid white

button
  @extends $gotham-medium
  font-size: 16px
  letter-spacing: 0.05em
  text-transform: uppercase
  background-color: transparent
  text-decoration: none
  border: 0
  outline: 0

  a
    position: absolute
    padding-left: 16px

  &.solid
    a
      line-height: 34px

    &:hover stop, stop
      stop-color: #E24F2A
      transition-property: stop-color
      transition-duration: 200ms

    &:hover .color
      stop-color: #C53E27

  &.outline
    a
      @extends $gotham-bold
    &:hover a, a
      color: #E24F2A
      line-height: 36px
      transition-property: color
      transition-duration: 200ms

    &:hover path, path
      stroke: #F5897B
      transition-property: stroke
      transition-duration: 200ms

    &:hover
      a
        color: #C53E27
      path
        stroke: #E45430


header > div, footer > div
  padding: 0 12%

section
  margin: 0 12%
  line-height: 1.5em
  text-align: center
  line-height: 120px
  position: relative

  h3
    background-color: white
    display: inline-block
    position: relative
    padding: 0 20px

  hr
    border: 0
    display: block
    width: 100%
    height: 2px
    background-color: light-grey
    z-index: -1
    position: absolute
    top: 60px

