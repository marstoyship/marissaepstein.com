@import '_settings'
@import 'work/_splash'
@import 'work/_designs'
@import 'work/_dribbble'
@import 'work/_discovery'
@import 'work/_footer'

@import 'shared/_fonts'
@import 'shared/_buttons'

normalize()
base()

*, ul, h1, h2, h3, p
  margin: 0
  padding: 0

ul
  list-style-type: none

html, body
  position: relative
  z-index: -9999
  size: 100%
  color: white

h1, h2
  @extends $gotham-black
  font-size: 44px
  text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

h2
  margin: 0 auto
  font-size: 32px

h3
  @extends $gotham-medium
  font-size: 24px
  color: black

h4
  @extends $gotham-medium
  font-size 28px

p
  @extends $whitney-book
  text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

li
  @extends $whitney-medium
  // letter-spacing: 0.025em
  font-size: 20px


header, footer
  a, span
    @extends $gotham-bold
    font-size: 24px
    border-bottom: 2px solid transparent
  
  a:hover
    border-bottom: 2px solid white

header > div, footer > div
  padding: 0 12%

section
  min-width: 960px
  max-width: 960px
  margin: 0 auto
  text-align: center
  line-height: 120px
  position: relative

  h3
    background-color: white
    display: inline-block
    position: relative
    padding: 0 20px

  hr
    border: 0
    display: block
    width: 100%
    height: 2px
    background-color: light-grey
    z-index: -1
    position: absolute
    top: 60px

  solid-button-color(#E24F2A, #C53E27, white, white)
  // outline-button-color(#F5897B, #E45430, #E24F2A, #C53E27)
  outline-button-color(#F5897B, #c2412c, #E24F2A, #E24F2A)
