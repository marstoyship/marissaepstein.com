@import 'work/_splash'
@import 'work/_designs'
@import 'work/_dribbble'
@import 'work/_discovery'

.home-page
  color: white
  padding-bottom: 60px      
  @media (max-width: 960px)
    padding-bottom: 10px

  h1, h2
    @extends $gotham-black
    font-size: 44px
    text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

  h2
    margin: 0 auto
    font-size: 32px

  h3
    @extends $gotham-medium
    font-size: 24px
    color: black

  h4
    @extends $gotham-medium
    font-size 24px

  p
    @extends $whitney-book
    text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

  li
    @extends $whitney-medium
    font-size: 20px

  section
    // min-width: 960px
    max-width: 960px
    margin: 0 auto
    text-align: center
    line-height: 120px
    position: relative
    @media (max-width: 640px)
        line-height: 50px

    h3
      background-color: white
      display: inline-block
      position: relative
      padding: 0 20px


    .filligre
      border: 0
      display: block
      width: 100%
      height: 2px
      background-color: light-grey
      z-index: -1
      position: absolute
      top: 60px

      @media (max-width: 980px)
        width: auto
        position: relative
        margin: 0 20px   
      
      @media (max-width: 640px)
        top: 25px

    solid-button-color(#E24F2A, #C53E27, white, white)
    // outline-button-color(#F5897B, #E45430, #E24F2A, #C53E27)
    outline-button-color(#F5897B, #c2412c, #E24F2A, #E24F2A)
