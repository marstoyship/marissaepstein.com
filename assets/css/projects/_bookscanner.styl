.project-casestudy.bookscanner
  .project-hero
    background: rgba(161, 176, 183, 1) url('/img/bg-bookscanner.jpg') no-repeat
    background-size: cover
    text-shadow: 0px 0px 10px rgba(73, 73, 73, 0.5)

    h1
      @media (max-width: 450px)
        font-size: 26px
    p
      @media (max-width: 450px)   
        padding-left: 15px  
        padding-right: 15px

  .project-section.app
    group()
    @media (max-width: 570px)
      padding-bottom: 20px
    img
      box-sizing: border-box
      padding: 35px 25px
    
    .last
      padding-bottom: 0px