.project-casestudy.bookscanner
  .project-hero
    background: blue url('/img/bg-bookscanner.jpg') no-repeat
    background-size: cover
    text-shadow: 0px 0px 10px rgba(73, 73, 73, 0.5)

    h1
      @media (max-width: 450px)
        font-size: 26px
    p
      @media (max-width: 450px)   
        padding-left: 15px  
        padding-right: 15px

  .project-section.app
    group()
    padding-bottom: 50px
    @media (max-width: 570px)
      padding-bottom: 20px
    img
      column(6)
      box-sizing: border-box
      padding: 35px 25px

      @media (max-width: 420px)
        column(12)
        padding-bottom: 0px
        max-width: 100%