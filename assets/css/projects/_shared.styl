.project-casestudy
  z-index: -1
  position: relative

.project-section
  padding: 0 20px
  max-width: 960px
  margin: 0 auto

  img
    display: block
    margin: 0 auto
    max-width: 960px
    height: auto
    position: relative
    @media (max-width: 980px)
      max-width: 100%
    
    &.white
      border: 2px solid light-grey 

    &.stack
      margin-bottom: 50px
      @media (max-width: 570px)
        margin-bottom: 25px
 
    &.half
      display: block
      height: auto     
      column(6)
      box-sizing: border-box
      max-width: 100%
      padding-left: 25px
      padding-right: 25px

      @media (max-width: 570px)
        column(12)
        padding-bottom: 35px 
    
.project-description 
  p
    @extends $whitney-book 
    text-align: center 
    text-size: 32px
    line-height: 30px
    padding: 50px 50px 0 50px
    @media (max-width: 750px)
      padding: 25px 25px 0 25px
    @media (max-width: 570px)
      text-size: 28px
      line-height: 24px
      padding: 25px 12px 0 12px

.project-section-title
  position: relative
  text-align: center
  padding-top: 50px
  padding-bottom: 50px 

  @media (max-width: 750px)
    padding-top: 35px
    padding-bottom: 35px

  hr.filligre
    border: 0
    display: block
    width: 100%
    height: 2px
    background-color: light-grey
    z-index: -1
    position: absolute
    top: 62px
    @media (max-width: 750px)
      top: 47px

  h3
    @extends $gotham-medium
    font-size: 21px
    color: black
    background-color: white
    display: inline-block
    position: relative
    padding: 0 20px
  