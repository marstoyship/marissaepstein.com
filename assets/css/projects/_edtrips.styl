.project-casestudy.edtrips
  .project-hero
    background: purple url('/img/bg-edtrips.jpg') no-repeat
    background-size: cover
    text-shadow: 0px 0px 10px rgba(73, 73, 73, 0.5)

  .project-section.print
    group()

    .half
      column(6)
      box-sizing: border-box
      max-width: 100%
      padding-left: 18px
      padding-right: 18px
      padding-bottom: 50px

      @media (max-width: 570px)
        column(12)
        padding-bottom: 60px    

  // button.outline

  &.outline
    a
      transition-property: color
      transition-duration: 200ms

    path
      transition-property: stroke
      transition-duration: 200ms 