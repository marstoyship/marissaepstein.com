.home-page section.dribbble
  group()

  color: white

  h4
    margin-left: 50px
    margin-right: 50px
    margin-top: 45px
    margin-bottom: 0px
    text-align: left
    color: white
    line-height: 24px
    height: 75px
    font-size: 18px
    text-overflow: ellipsis
    overflow: hidden

  .shots
    padding-top: 20px

  .shot-container 
    column(4)
    margin-bottom: 20px

    .shot
      width: 300px
      height: 225px
      position: relative
      background-image: url('/img/spinner.gif')
      background-repeat: no-repeat
      background-color: light-grey
      background-position: center center
      margin: 0 auto

    @media (max-width: 960px)
      column(6)
      margin-bottom: 20px

    @media (max-width: 750px)
      column(12)
      margin-bottom: 20px

    &:hover .overlay
      opacity: 1

  .overlay
    outline-button-color(#ff8a7a, white, white, white)
    transition-property: opacity
    transition-duration: 400ms
    opacity: 0
    background: rgba(206, 41, 19, 0.85)
    size: 100%
    position: absolute
    top: 0

    & > a
      top:0
      position: absolute
      display: block
      size: 100%

    button
      font-weight: normal
      margin: 0 auto
      a
        padding-left: 40px

  & > h3
    padding-right: 10px

  & > img
    background-color: white
    position: relative
    top: 4px
    padding-right: 20px

  & > button
    float: right
    margin-top: 45px
    margin-bottom: 4px
    @media (max-width: 960px)
      margin-right: 30px
      margin-bottom: 20px
      margin-top: 25px
