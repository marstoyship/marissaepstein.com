section.dribbble
  group()

  color: white

  h4
    margin-left: 50px
    text-align: left
    color: white
    line-height: 34px
    height: 50px

  .shots
    padding-top: 20px

    .shot
      column(4)
      size 300px 225px
      position: relative

      &:hover .overlay
        opacity: 1

  .overlay
    outline-button-color(#ff8a7a, white, white, white)
    transition-property: opacity
    transition-duration: 400ms
    opacity: 0
    background: rgba(206, 41, 19, 0.85)
    size: 100%
    position: absolute
    top: 0

    & > a
      top:0
      position: absolute
      display: block
      size: 100%

    button
      font-weight: normal
      margin: 0 auto
      a
        padding-left: 40px

  & > button
    float: right
    margin-top: 45px
    margin-bottom: 4px
