section.discovery
  group()

  div
    padding-top: 16px
    position: relative
    @media (max-width: 640px) 
      padding-top: 0px
      margin-top:-15px

  .hover
    position: absolute
    left: 0
    right: 0
    top: 123px
    
    @media (max-width: 980px) 
      top: 125px

    @media (max-width: 640px)  
      top: 55px

    img
      background-color: white
      opacity: 0
      transition-property: opacity
      transition-duration: 200ms

    img:hover
      opacity: 1

  div
    hr
      display: none
      width: 90%
      height: 2px
      background-color: light-grey
      border:none
      box-sizing:border-box
      margin: 0 auto
      &.first, &.second  
        display: block 
        width: 2px
        height: 280px
        position: absolute
        left: 33.3333333%
      &.second 
        left: 66.6666666%

      &.third 
         display: block      

      @media (max-width: 820px)  
        &.first
          display: block 
          width: 2px
          height: 400px
          position: absolute
          left: 0
          right: 0
        &.even
          display: block     
        &.second 
          width: 90%
          height: 2px         
          position: static          
        &.third 
          display: none

      @media (max-width: 640px)   
        display: block
        width: 70%
        &.first
          width: 70%
          height: 2px
          position: static
        &.second
          width: 70%
        &.third 
          width: 70%
          display: block

  .fact
    height: 130px
    box-sizing:border-box

    column(4)
    padding-top: 30px
    @media (max-width: 820px)   
      column(6)
      padding-top: 30px
      padding-bottom: 10px
    @media (max-width: 640px)   
      column(12)
      width: 90%
      margin-left: 20px 
      margin-right: 20px 
      // height: inherit
      
      &.figmints
        height: 110px
    
    .hover
      position: absolute
      left: 0

  button
    float: right
    margin-top: 35px
    margin-bottom: 10px
    @media (max-width: 960px)
      margin-right: 30px
      margin-top: 15px
      margin-bottom: 30px


