  .hover
    position: absolute
    left: 0
    right: 0
    top: 123px
    
    @media (max-width: 980px) 
      top: 125px

    @media (max-width: 640px)  
      top: 55px

    img
      background-color: white
      opacity: 0
      transition-property: opacity
      transition-duration: 200ms

    img:hover
      opacity: 1

