  div
    hr
      display: none
      width: 90%
      height: 2px
      background-color: light-grey
      border:none
      box-sizing:border-box
      margin: 0 auto
      &.first, &.second  
        display: block 
        width: 2px
        height: 280px
        position: absolute
        left: 33.3333333%
      &.second 
        left: 66.6666666%

      &.third 
         display: block      

      @media (max-width: 820px)  
        &.first
          display: block 
          width: 2px
          height: 400px
          position: absolute
          left: 0
          right: 0
        &.even
          display: block     
        &.second 
          width: 90%
          height: 2px         
          position: static          
        &.third 
          display: none

      @media (max-width: 640px)   
        display: block
        width: 70%
        &.first
          width: 70%
          height: 2px
          position: static
        &.second
          width: 70%
        &.third 
          width: 70%
          display: block

