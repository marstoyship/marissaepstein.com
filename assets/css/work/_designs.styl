@import 'axis/animation'

@import '../shared/_fonts'
@import '../shared/_buttons'

.home-page
  padding-top: 75px
  @media (max-width: 570px)
    padding-top: 20px

  section.designs
    max-width: 960px
    outline-button-color(#ff8a7a, white, white, white)
    @media (min-width: 1490px)
      max-width: 1490px
    @media (min-width: 2020px)
      max-width: 2020px

    h4, ul, li
      line-height: 1.5em
      margin: 0
      padding: 0
      text-align: left

    h4
      padding-top: 46px
      padding-bottom: 20px

    h4, li
      padding-left: 50px
      line-height: 34px

    & > div
      group()
      padding-top: 20px
      margin: 0 auto

      @media (max-width: 980px)
        margin: 0 10px

    .bottom-6
      display: none;

    button.solid
      a
        padding-left: 50px

    img
      display: block
      max-width: 465px
      height: auto

      @media (max-width: 980px)
        max-width: 100%

    .project
      cursor: pointer
      column(6)
      margin-bottom: 20px
      position: relative
      @media (min-width: 1490px)
        column(4)
        margin-bottom: 30px 
     
      @media (min-width: 2020px)
        column(3)
        margin-bottom: 40px 

      @media (max-width: 900px)
        margin-bottom: 15px

      @media (max-width: 600px)
        margin-bottom: 10px

      @media (max-width: 480px)
        column(12)
        margin-bottom: 15px


      &:hover .overlay
        opacity: 1

    .overlay
      transition-property: opacity
      transition-duration: 400ms
      opacity: 0
      background: rgba(206, 41, 19, 0.85)
      size: 100%
      position: absolute
      top: 0

      ul
        height: 220px

      & > a
        top:0
        position: absolute
        display: block
        size: 100%

