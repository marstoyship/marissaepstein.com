@import 'axis/animation'

@import '../shared/_fonts'
@import '../shared/_buttons'

.home-page
  padding-top: 75px
  
  section.designs
    outline-button-color(#ff8a7a, white, white, white)

    min-width: 960px
    max-width: 960px

    h4, ul, li
      line-height: 1.5em
      margin: 0
      padding: 0
      text-align: left

    h4
      padding-top: 46px
      padding-bottom: 20px

    h4, li
      padding-left: 50px
      line-height: 34px

    & > div
      group()
      margin: 0 auto
      min-width: 960px
      max-width: 960px

    img
      display: block
      width: 100%
      max-width 465px
      height: auto

    .project
      cursor: pointer
      column(6)
      margin-bottom: 20px
      position: relative

      &:hover .overlay
        opacity: 1

    .overlay
      transition-property: opacity
      transition-duration: 400ms
      opacity: 0
      background: rgba(206, 41, 19, 0.85)
      size: 100%
      position: absolute
      top: 0

      ul
        height: 220px

      & > a
        top:0
        position: absolute
        display: block
        size: 100%    

      button
        margin: 0 auto

    & > div > button
      float: right
      margin-top: 30px
      margin-bottom: 60px

