header.splash
  size: 100%
  color: white
  background: red url('/img/bg-header.jpg') no-repeat
  background-size: cover
  text-align: center
  text-transform: uppercase
  z-index: -9998
  overflow: hidden
  display: block
  position: relative

  @media (max-width: 570px)
    height: auto
    padding-bottom: 30px

  h1, h2
    @extends $gotham-black
    font-size: 44px
    text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

    @media (max-width: 570px)
      font-size: 36px

  p
    @extends $whitney-book
    text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

  li
    @extends $whitney-medium
    font-size: 20px

  a, span
    @extends $gotham-bold
    font-size: 24px
    border-bottom: 2px solid transparent

    @media (max-width: 570px)
      font-size: 21px

  a:hover
    border-bottom: 2px solid white

  & > div
    margin: 0 auto
  

  a:link, a:visited, a:active
    color: white
    text-decoration: none
 
  nav
    padding: 0 12%
    left: 0
    width: 76%
    position: absolute
    padding-top 50px
    font-size: 24px
    display: inline-block
    z-index: 10
    @media (max-width: 570px)
      padding-top: 20px


    span
      float: left

      @media (max-width: 750px)
        display: block
        float: none

    ul
      float: right

      @media (max-width: 750px)
        float: none
        margin: 10px auto 0

      li
        float: left
        
        @media (max-width: 750px)
          float: none
          display: inline

        &:first-child:after
          content: ''
          size: .5em
          border-radius: 50%
          background-color: white
          display: inline-block
          margin: 0 20px
          margin-bottom: .125em

  .logo
    display: inline-block
    margin: 0 auto
    margin-bottom: 100px
    position: relative

    @media (device-height : 568px) and (device-width : 320px) and (-webkit-min-device-pixel-ratio: 2)
      margin-bottom: 50px
      margin-top: 120px

    @media (max-width: 750px) 
      margin-bottom: 50px
      margin-top: 120px

    .moon
      size: 100%
      position: absolute
      background-image: url('/img/logo-white_shadowed-just-ball.png')
      background-repeat: no-repeat
      animation-duration: 20s
      animation-name: orbit
      animation-iteration-count: infinite
      animation-timing-function:linear
      -webkit-backface-visibility: hidden

    .phobos
      left: 0
      bottom: 0
      background-position: bottom left

    .deimos
      top: 0
      right: 0
      background-position: top right

  h1
    padding-bottom: 40px

    @media (max-width: 570px)
      text-align: center

  p
    line-height: 48px
    padding: 0
    margin: 0 auto
    max-width: 1000px
    text-transform: none
    font-size: 29px

    @media (max-width: 890px)
      font-size: 24px
      line-height: 36px

    @media (max-width: 570px)
      font-size: 19px
      line-height: 30px

  .welcome:before
    content: ''
    background: linear-gradient(
      rgba(206,42,20,0) 0%,
      rgba(206,42,20,0.25) 25%,
      rgba(206,42,20,0.5) 50%,
      rgba(206,42,20,0.25) 75%,
      rgba(206,42,20,0) 100%
    )
    position: absolute
    size 100% 75%
    top: 25%
    left: 0
    z-index: -1

  & > div
    width: 76%
    display: table
    height: 100%
    @media (max-width: 570px)
      width: 90%

  .welcome
    display: table-cell
    vertical-align: middle
    text-align: center
    height: 430px

@keyframes orbit
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

