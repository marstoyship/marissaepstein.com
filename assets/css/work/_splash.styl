header.splash
  size: 100%
  color: white
  background: red url('/img/bg-header.jpg') no-repeat
  background-size: cover
  text-align: center
  text-transform: uppercase
  z-index: -9998
  overflow: hidden
  display: block
  position: relative

  h1, h2
    @extends $gotham-black
    font-size: 44px
    text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

  p
    @extends $whitney-book
    text-shadow: 0px 0px 10px rgba(145, 17, 0, 0.5)

  li
    @extends $whitney-medium
    font-size: 20px

  a, span
    @extends $gotham-bold
    font-size: 24px
    border-bottom: 2px solid transparent

  a:hover
    border-bottom: 2px solid white

  & > div
    padding: 0 12%

  a:link, a:visited, a:active
    color: white
    text-decoration: none

  nav
    padding: 0 12%
    left: 0
    width: 76%
    position: absolute
    padding-top 50px
    font-size: 24px
    display: inline-block
    z-index: 10

    span
      float: left

    ul
      float: right

      li
        float: left

        &:first-child:after
          content: ''
          size: .5em
          border-radius: 50%
          background-color: white
          display: inline-block
          margin: 0 20px
          margin-bottom: .125em

  .logo
    display: inline-block
    margin: 0 auto
    margin-bottom: 100px
    position: relative

    .moon
      size: 100%
      position: absolute
      background-image: url('/img/logo-white_shadowed-just-ball.png')
      background-repeat: no-repeat
      animation-duration: 20s
      animation-name: orbit
      animation-iteration-count: infinite
      animation-timing-function:linear
      -webkit-backface-visibility: hidden

    .phobos
      left: 0
      bottom: 0
      background-position: bottom left
      // transform-origin: 100% 0%

    .deimos
      top: 0
      right: 0
      background-position: top right
      // transform-origin: 0% 100%

  h1
    padding-bottom: 40px

  p
    line-height: 48px
    padding: 0
    margin: 0 auto
    max-width: 1000px
    text-transform: none
    font-size: 29px

  .welcome:before
    content: ''
    background: linear-gradient(
      rgba(206,42,20,0) 0%,
      rgba(206,42,20,0.25) 25%,
      rgba(206,42,20,0.5) 50%,
      rgba(206,42,20,0.25) 75%,
      rgba(206,42,20,0) 100%
    )
    position: absolute
    size 100% 75%
    top: 25%
    left: 0
    z-index: -1

  & > div
    width: 76%
    display: table
    height: 100%

  .welcome
    display: table-cell
    vertical-align: middle
    text-align: center
    height: 430px

@keyframes orbit
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

