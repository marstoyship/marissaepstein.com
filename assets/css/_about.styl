.about-page
  @extends $whitney-book
  group()
  padding-top: 130px
  font-size: 18px
  line-height: 32px
  color: black
  max-width: 960px
  margin: 0 auto
  padding-bottom: 60px  
  @media (max-width: 960px)
    padding-bottom: 10px
  @media (max-width: 610px)
    padding-top: 110px

  solid-button-color(#E24F2A, #C53E27, white, white)
  button
    float: right
    margin-bottom: 60px
    @media (max-width: 960px)
      margin-right: 30px
      margin-bottom: 20px
      margin-top: 25px

  h1
    @extends $gotham-black
    font-size: 36px
    line-height: 50px
    color: red
    padding-bottom: 16px
    display: inline-block
    width: 580px
    @media (max-width: 720px)
      font-size: 30px
      width: 100%    
      line-height: 40px
      text-align: center
      margin: 0 auto
      padding: 0 40px 30px 40px
      box-sizing: border-box

    @media (max-width: 510px)
      // font-size: 18px
      width: 100%
      font-size: 24px
      line-height: 36px
      padding: 0 10px 30px 10px

  h2
    @extends $gotham-medium
    font-size: 24px
    line-height: 100px
    background-color: white
    display: inline-block
    position: relative
    padding: 0 20px

  .filligre
    border: 0
    display: block
    width: 100%
    height: 2px
    background-color: light-grey
    z-index: -1
    position: absolute
    top: 50px
    @media (max-width: 980px)
      width: auto
      position: relative
      margin: 0 20px  

   .filligre.education
     display: none
     @media (max-width: 960px)
      display: block

  h3
    @extends $gotham-bold
    font-size: 23px
    line-height: 28px
    color: red

  h4
    @extends $gotham-bold
    font-size: 20px
    line-height: 32px

  section
    position: relative
    overflow: hidden 

    header
      text-align: center

  section.intro
    group()
    @media (max-width: 980px)
      padding: 0 20px

    .img-container
      float: right
      padding-left: 50px
      padding-bottom: 35px
      padding-top: 14px
      max-width: 292px
      max-height: 540px
      overflow: hidden
      display: inline
      @media (device-height : 568px) and (device-width : 320px) and (-webkit-min-device-pixel-ratio: 2)
        max-height: 400px
        display: block
        float: none
        padding-left: 0
        padding-bottom: 0
        margin: 0 auto
      @media (max-width: 720px)
        max-height: 400px
        display: block
        float: none
        padding-left: 0
        padding-bottom: 0
        margin: 0 auto
      img
        width:100%

    .story
      group()
      width: 610px
      @media (max-width: 720px)
        column(12)

  section.what-i-do
    group()

    line-height: 28px
    li 
      column(2)
      text-align: center

      @media (max-width: 960px)
        column(4)
        // margin: 0 auto
        padding-bottom: 20px

      @media (max-width: 600px)
        column(6)
        // margin: 0 auto
        padding-bottom: 20px

      @media (max-width: 420px)
        column(12)

    li.direction
      @media (max-width: 960px)
        clear: left 

  img[title="Branding"]
    padding: 0 31.5px 16px

  img[title="Direction"]
    padding: 0 31.5px 16px

  img[title="Web"]
    padding: 0 8px 16px

  img[title="UX"]
    padding: 0 16px 16px

  img[title="Packaging"]
    padding: 0 33px 16px

  img[title="Print"]
    padding: 0 28.5px 16px

  section.how-i-do-it 
    group()
    ul
      @media (max-width: 450px)
        margin: 0 auto

      li
        column(4)
        text-indent: 30px
        @media (max-width: 650px)
          column(6)

        @media (max-width: 450px)
          column(12)

        &:before
          position: relative
          content: "• "
          color: red

  section.experience, section.education 
    group()
    font-size: 15px
    line-height: 24px
    padding-bottom: 55px
    @media (max-width: 960px)
      margin-left: 0
      padding-left: 30px
      padding-right: 40px
      padding-bottom: 10px

    h3, h4,  p
      padding: 0
      margin: 0

    h3:first-child
      padding-top: 20px

    h3
      padding-top: 47px

    em
      font-size: 18px
      line-height: 36px

    li:before
      position: relative
      content: "• "
      color: red

    section
      column(6)
      width: 46%
      margin-left: 2%
      margin-right: 2%
      @media (max-width: 960px)
        column(12)

  section.education 
    @media (max-width:960px)
      padding-left: 0px
    div
      margin-top: -48px
      padding-top: 48px
      padding-left: 48px
      border-left: 2px solid light-grey
      @media (max-width: 960px)
        border: none
        margin-left: 0px
        padding-right: 40px
        padding-left: 0px
        padding-bottom: 10px

