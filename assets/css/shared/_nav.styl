nav.sticky
  min-width: 960px
  display: none
  size: 76% 50px
  background-color: rgba(206, 41, 19, 0.9)
  position: fixed
  z-index: 10000
  padding: 0 12%
  left: 0
  text-align: center
  color: white
  padding-top: 25px
  -webkit-backface-visibility: hidden;

  a:link, a:visited, a:active
    color: white
    text-decoration: none

  a, span
    @extends $gotham-bold
    font-size: 24px
    border-bottom: 2px solid transparent

  a:hover
    border-bottom: 2px solid white

  img
    display: inline-block
    position: relative
    top: -15px
    left: -13px

  span
    float: left

  ul
    float: right

    li
      float: left

      &:first-child:after
        content: ''
        size: .5em
        border-radius: 50%
        background-color: white
        display: inline-block
        margin: 0 20px
        margin-bottom: .125em

